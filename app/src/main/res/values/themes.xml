<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lunatics" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Malachite</item>
        <item name="colorPrimaryVariant">@color/JacksonPurple</item>
        <item name="colorOnPrimary">@color/MountainMeadow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Elm</item>
        <item name="colorSecondaryVariant">@color/BayOfMany</item>
        <item name="colorOnSecondary">@color/Calypso</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Lunatics.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Lunatics.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Lunatics.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>